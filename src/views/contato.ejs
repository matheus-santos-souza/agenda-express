
<%- include('includes/head') %>

   <%- include('includes/navbar') %>

   <div class="container">
      <div class="row">
         <div class="col-lg-2"></div>

         <div class="col-lg-8 my-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seus contatos</p>
            
            <%- include('../views/includes/messages') %>
            <div class="col-lg">
               <% if (contato._id) { %>
               <form action="/contato/show/<%= contato._id %>" method="POST" class="my-2">
               <% } else { %>
               <form action="/contato/register" method="POST" class="my-2">
               <% } %>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group">
                     <label>Nome</label>
                     <input value="<%= contato.nome %>" name="nome" type="text" class="form-control" placeholder="Digite o nome">
                  </div>
                  <div class="form-group">
                     <label>Sobrenome</label>
                     <input value="<%= contato.sobrenome %>" name="sobrenome" type="text" class="form-control" placeholder="Digite o sobrenome">
                  </div>
                  <div class="form-group">
                     <label>Telefone</label>
                     <input value="<%= contato.telefone %>" name="telefone" type="tel" class="form-control" placeholder="Digite o telefone">
                  </div>
                  <div class="form-group">
                     <label>Email</label>
                     <input value="<%= contato.email %>" name="email" type="email" class="form-control" placeholder="Digite o email">
                  </div>
                  <% if (contato._id) { %>          
                     <button type="submit" class="btn btn-success">Editar contato</button>
                     <button onclick="window.location.href='/contato'" type="reset" class="btn btn-primary mr-3" href="/contato">Criar um novo contato</button>
                  <% } else { %>
                     <button type="submit" class="btn btn-primary">Criar contato</button>
                  <% } %>
               </form>  
            </div>
            <div class="col-lg-2"></div>
         </div>
   </div>

<%- include('includes/footer') %>